<% if current_user != user %>
<li>
 <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile', user_path(user), class: 'profile-link' %>
  </span>
  <% if !current_user.pending_friends.include?(user) && !current_user.inverse_friends.include?(user) && !current_user.friends.include?(user)%>
    <span>
      <%= link_to "send request", friendships_path(friendship: {friend_id:user.id, confirmed: false}), method: 'POST', class: "btn bg-green p-0" %>
    </span>
    <% elsif current_user.friends.include?(user) %>
      <%="Friends"%>
    <% else %>
      <span class="btn btn-warning p-0">
      <%="pending" %>
      </span>
  <% end %>
</li>
<% end %>



