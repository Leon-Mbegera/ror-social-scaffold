<ul>
  <%if @inverse_friendships.any? %>
  <h2>Received Requests</h2>
    <% @inverse_friendships.each do |inverse|%>
        <% unless inverse.confirmed %>
         <% sender = User.find(inverse.user_id) %> 
        <div><%= sender.name %></div>
        <span>
        <%= link_to "Confirm", friendship_path(inverse), method: "PATCH", class: "btn bg-green p-0" %>
        <%= link_to "Decline", friendship_path(inverse), method: "delete", class: "btn bg-red p-0" %>
        </span>
        <%end%>
    <% end %>
    <hr>
   <%else%>
   <p> Oops! No requests</p>
   <%end%>
</ul>
